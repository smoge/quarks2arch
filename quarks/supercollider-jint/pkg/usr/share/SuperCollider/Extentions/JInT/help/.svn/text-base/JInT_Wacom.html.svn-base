<p class="p6">~a = {</p>
<p class="p6"><span class="Apple-tab-span">	</span>k[<span class="s5">\pos</span>].kr.poll;</p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">SinOsc</span>.ar!2;</p>
<p class="p6">}</p>
<p class="p7"><br></p>
<p class="p6">(</p>
<p class="p6">~a = {</p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">var</span> ctls = k[<span class="s5">\pos</span>].kr;</p>
<p class="p7"><br></p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">Splay</span>.ar(<span class="s3">SinOsc</span>.ar(<span class="s3">Array</span>.geom(ctls.size, 150, 1.5).reverse) * <span class="s3">LFPulse</span>.ar(ctls.range(1, 20)).lag(0.01))</p>
<p class="p6">}</p>
<p class="p6">)</p>
<p class="p7"><br></p>
<p class="p6">~a.play</p>
<p class="p6">~a.stop</p>
<p class="p6">(</p>
<p class="p6">~a = {</p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">var</span> ctl = k[<span class="s5">\pos</span>].kr;</p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">var</span> pFreq = k[<span class="s5">\press</span>].kr.range(0, 10).poll;</p>
<p class="p7"><span class="Apple-tab-span">	</span></p>
<p class="p6"><span class="Apple-tab-span">	</span><span class="s3">Splay</span>.ar(({<span class="s3">|i|</span> <span class="s3">SinOsc</span>.ar(ctl.exprange((10 - (i+1)) * 50, (10 - (i+1)) * 100).lag(i*1), mul: 0.05)}!20).scramble) * <span class="s3">LFPulse</span>.ar(pFreq).lag(0.01) * k[<span class="s5">\press</span>].kr.range(0,1);</p>
<p class="p6">}</p>
<p class="p6">)</p>
<p class="p6">~a.play</p>
<p class="p6">g</p>
<p class="p6">k.stop</p>
